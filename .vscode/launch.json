    "version": "0.2.0",
    "configurations": [
        {
            "name": "HL SDL debug",
            "request": "launch",
            "type":"hl",
            "argsFile": "hl.sdl.debug.hxml",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "haxe: active configuration"
        },
        {
            "name": "HL DX debug",
            "request": "launch",
            "type":"hl",
            "argsFile": "hl.debug.hxml",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "HL debug"
        },
        {
            "name": "Chrome JS debug",
            "request": "launch",
            "type": "chrome",
            "file": "${workspaceFolder}/js.html",
            "preLaunchTask": "JS debug"
        },
        {
            "name": "Firefox JS debug",
            "request": "launch",
            "type": "firefox",
            "file": "${workspaceFolder}/js.html",
            "preLaunchTask": "JS debug"
        }
    ]
}